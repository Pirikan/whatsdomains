---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title} lang={frontmatter.lang}>
<div class="Date">
    <p class="PublishedDate"><span class="material-symbols-outlined PublishedDate" id="PublishedDateIcon">
        publish
        </span> <span class="PublishedDate" id="PublishedDateDate">{frontmatter.pubDate.slice(0,10)}</span></p>
    <div class="RePublishedDate" id="div_RePublishedDate" style="display: {isRePublishedDate ? 'block' : 'none'};">
        <p class="RePublishedDate"><span class="material-symbols-outlined RePublishedDate" id="RePublishedDateIcon">
            published_with_changes
            </span> <span class="RePublishedDate" id="RePublishedDateDate">{frontmatter.lstupDate.slice(0,10)}</span></p>
    </div>
</div>
<!--
<div class="tags">
    {frontmatter.tags.map((tag: unknown) => (
        <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
</div>
-->
<h2>Whatâ€™s {frontmatter.title}</h2>
<h1>The current URL is: {Astro.url}</h1>
<h1>The current URL pathname is: {Astro.url.pathname}</h1>
<h1>The current URL origin is: {Astro.url.origin}</h1>
<slot />
<div class="CopyLink">
<input id="PathName" type="text" value={Astro.url.pathname} readonly>
</div>
<button class="Button-Action"  id="CopyLink-Button" type="button">Copy Link</button>

</BaseLayout>
<script>
    import "../scripts/RePublihsedDate.js";
    import "../scripts/CopyLink.js";
</script>
<style>
.Date {
    display: flex;
    gap: 0.7rem;
}
.material-symbols-outlined {
    font-variation-settings:
    'FILL' 0,
    'wght' 400,
    'GRAD' 0,
    'opsz' 48f
}

a {
    color: #00539F;
}
.CopyLink {
    position: absolute;
    opacity: 0;
}
.tags {
    display: flex; 
    flex-wrap: wrap; 
    margin: 0 auto;  
}

.tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
}
</style>