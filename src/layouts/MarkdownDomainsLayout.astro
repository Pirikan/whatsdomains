---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
<p>Created on : {frontmatter.pubDate.slice(0,10)}</p>
<p class="lstupDate">Lastest Update on : <div class="lstupDate">{frontmatter.lstupDate.slice(0,10)}</div></p>
<div class="tags">
    {frontmatter.tags.map((tag) => (
        <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
</div>
<h2>What's {frontmatter.title}</h2>
<slot />
</BaseLayout>
<style>
div.lstupDate:empty {
    display: none;
}
a {
    color: #00539F;
}
.tags {
    display: flex; 
    flex-wrap: wrap; 
    margin: 0 auto;  
}

.tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
}
</style>