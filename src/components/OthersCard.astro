---
export interface Props {
	title: string;
	href: string;
}

const { href, title } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
		</h2>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0.25rem;
		background-color: var(--c-CardBackground);;
		background-image: none;
		background-size: 100%;
		border-radius: 0.6rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px var(--c-Shadow), 0 2px 4px -2px var(--c-Shadow);
		margin-bottom: 1rem;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.8rem;
		color: var(--c-CardMain);
		background-color: var(--c-CardBackground);
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.2rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		text-align: center;

	}
	.link-card:is(:hover, :focus-within) {
		border: 0.1rem solid var(--c-BorderMain);
		background-size: calc(100% - 0.2rem);
	}
</style>