---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPost from '../../components/BlogPost.astro';
import DomainPost from '../../components/DomainPost.astro';

export async function getStaticPaths() {
    const allPosts = await Astro.glob('../*/*.md');

    const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];

    return uniqueTags.map((tag) => {
    const filteredBlogs = allPosts.filter((post) => post.frontmatter.tags.includes(tag));
    return {
        params: { tag },
        props: { posts: filteredBlogs },
    };
    });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---
<BaseLayout pageTitle={tag}>
    <p>Posts tagged with {tag}</p>
    <ul>
        {posts.map((post: any) => <BlogPost url={post.url} title={post.frontmatter.title}/>)}
    </ul>
    <ul>
        {posts.map((post: any) => <DomainPost url={post.url} title={post.frontmatter.title}/>)}
    </ul>
</BaseLayout>