---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPost from '../../components/BlogPost.astro';
import DomainPost from '../../components/DomainPost.astro';

export async function getStaticPaths() {
    const allBlogs = await Astro.glob('../blog/*.md');
    const allDomains = await Astro.glob('../domains/*.md');

    const uniqueTags = [...new Set(allBlogs.map((post) => post.frontmatter.tags).flat())];

    return uniqueTags.map((tag) => {
    const filteredBlogs = allBlogs.filter((post) => post.frontmatter.tags.includes(tag));
    return {
        params: { tag },
        props: { posts: filteredBlogs },
    };
    });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---
<BaseLayout pageTitle={tag}>
    <p>Posts tagged with {tag}</p>
    <ul>
        {posts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title}/>)}
    </ul>
    <ul>
        {posts.map((post) => <DomainPost url={post.url} title={post.frontmatter.title}/>)}
    </ul>
</BaseLayout>